@model CalculateBMIRequest
@{
    ViewData["Title"] = "Calculate BMI, BMR & TDEE";
}

<div class="container mt-4">
    <h2>Calculate BMI, BMR & TDEE</h2>
    <p class="text-muted">Enter your measurements to calculate Body Mass Index, Basal Metabolic Rate, and Total Daily Energy Expenditure.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["BMIResult"] != null || TempData["BMRResult"] != null || TempData["TDEEResult"] != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Calculation Results</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (TempData["BMIResult"] != null)
                    {
                        <div class="col-md-4">
                            <h5>BMI</h5>
                            <h3 class="text-primary">@Convert.ToDouble(TempData["BMIResult"]).ToString("F2")</h3>
                        </div>
                    }
                    @if (TempData["BMRResult"] != null)
                    {
                        <div class="col-md-4">
                            <h5>BMR</h5>
                            <h3 class="text-info">@Convert.ToDouble(TempData["BMRResult"]).ToString("F2")</h3>
                            <small class="text-muted">Calories/day</small>
                        </div>
                    }
                    @if (TempData["TDEEResult"] != null)
                    {
                        <div class="col-md-4">
                            <h5>TDEE</h5>
                            <h3 class="text-success">@Convert.ToDouble(TempData["TDEEResult"]).ToString("F2")</h3>
                            <small class="text-muted">Calories/day</small>
                        </div>
                    }
                </div>

                @if (TempData["BmiRecCategory"] != null || TempData["BmrRecText"] != null || TempData["TdeeRecCategory"] != null)
                {
                    <hr />
                    <div class="mt-3">
                        @if (TempData["BmiRecCategory"] != null)
                        {
                            <h5>BMI Recommendation</h5>
                            <p class="mb-1"><strong>Category:</strong> @TempData["BmiRecCategory"]</p>
                            <p class="mb-3"><strong>Recommendation:</strong> @TempData["BmiRecText"]</p>
                        }
                        @if (TempData["BmrRecText"] != null)
                        {
                            <h5>BMR Recommendation</h5>
                            <p class="mb-3"><strong>Recommendation:</strong> @TempData["BmrRecText"]</p>
                        }
                        @if (TempData["TdeeRecCategory"] != null)
                        {
                            <h5>TDEE Recommendation</h5>
                            <p class="mb-1"><strong>Summary:</strong> @TempData["TdeeRecCategory"]</p>
                            <p class="mb-0"><strong>Recommendation:</strong> @TempData["TdeeRecText"]</p>
                        }
                    </div>
                }

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-primary">View All Metrics</a>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="CalculateBMI" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="WeightLbs" class="form-label"></label>
                        <input asp-for="WeightLbs" class="form-control" />
                        <span asp-validation-for="WeightLbs" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HeightInches" class="form-label"></label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Age" class="form-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                            <option value="">-- Select Gender --</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ActivityLevel" class="form-label"></label>
                    <select asp-for="ActivityLevel" class="form-select" asp-items="Html.GetEnumSelectList<ActivityLevelEnum>()">
                        <option value="">-- Select Activity Level --</option>
                    </select>
                    <span asp-validation-for="ActivityLevel" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Sedentary: Little/no exercise | Lightly Active: Light exercise 1-3 days/week |
                        Moderately Active: Moderate exercise 3-5 days/week | Very Active: Hard exercise 6-7 days/week |
                        Extra Active: Very hard exercise & physical job
                    </small>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Calculate</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@model CalculateBMIRequest
@{
    ViewData["Title"] = "Calculate BMI, BMR & TDEE";
}

<div class="container mt-4">
    <h2>Calculate BMI, BMR & TDEE</h2>
    <p class="text-muted">Enter your measurements to calculate Body Mass Index, Basal Metabolic Rate, and Total Daily Energy Expenditure.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["BMIResult"] != null || TempData["BMRResult"] != null || TempData["TDEEResult"] != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Calculation Results</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (TempData["BMIResult"] != null)
                    {
                        <div class="col-md-4">
                            <h5>BMI</h5>
                            <h3 class="text-primary">@Convert.ToDouble(TempData["BMIResult"]).ToString("F2")</h3>
                        </div>
                    }
                    @if (TempData["BMRResult"] != null)
                    {
                        <div class="col-md-4">
                            <h5>BMR</h5>
                            <h3 class="text-info">@Convert.ToDouble(TempData["BMRResult"]).ToString("F2")</h3>
                            <small class="text-muted">Calories/day</small>
                        </div>
                    }
                    @if (TempData["TDEEResult"] != null)
                    {
                        <div class="col-md-4">
                            <h5>TDEE</h5>
                            <h3 class="text-success">@Convert.ToDouble(TempData["TDEEResult"]).ToString("F2")</h3>
                            <small class="text-muted">Calories/day</small>
                        </div>
                    }
                </div>

                @if (TempData["BMIResult"] != null)
                {
                    <hr />
                    <div class="mt-4">
                        <h5>BMI Reference Chart</h5>
                        <div class="chart-container" style="position: relative; height: 300px;">
                            <canvas id="bmiChart"></canvas>
                        </div>
                    </div>
                }

                @if (TempData["BmiRecCategory"] != null || TempData["BmrRecText"] != null || TempData["TdeeRecCategory"] != null)
                {
                    <hr />
                    <div class="mt-3">
                        @if (TempData["BmiRecCategory"] != null)
                        {
                            <h5>BMI Recommendation</h5>
                            <p class="mb-1"><strong>Category:</strong> @TempData["BmiRecCategory"]</p>
                            <p class="mb-3"><strong>Recommendation:</strong> @TempData["BmiRecText"]</p>
                        }
                        @if (TempData["BmrRecText"] != null)
                        {
                            <h5>BMR Recommendation</h5>
                            <p class="mb-3"><strong>Recommendation:</strong> @TempData["BmrRecText"]</p>
                        }
                        @if (TempData["TdeeRecCategory"] != null)
                        {
                            <h5>TDEE Recommendation</h5>
                            <p class="mb-1"><strong>Summary:</strong> @TempData["TdeeRecCategory"]</p>
                            <p class="mb-0"><strong>Recommendation:</strong> @TempData["TdeeRecText"]</p>
                        }
                    </div>
                }

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-primary">View All Metrics</a>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="CalculateBMI" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="WeightLbs" class="form-label"></label>
                        <input asp-for="WeightLbs" class="form-control" />
                        <span asp-validation-for="WeightLbs" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HeightInches" class="form-label"></label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Age" class="form-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                            <option value="">-- Select Gender --</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ActivityLevel" class="form-label"></label>
                    <select asp-for="ActivityLevel" class="form-select" asp-items="Html.GetEnumSelectList<ActivityLevelEnum>()">
                        <option value="">-- Select Activity Level --</option>
                    </select>
                    <span asp-validation-for="ActivityLevel" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Sedentary: Little/no exercise | Lightly Active: Light exercise 1-3 days/week |
                        Moderately Active: Moderate exercise 3-5 days/week | Very Active: Hard exercise 6-7 days/week |
                        Extra Active: Very hard exercise & physical job
                    </small>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Calculate</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (TempData["BMIResult"] != null)
    {
        <script>
            const bmiValue = @Convert.ToDouble(TempData["BMIResult"]);
            const ctx = document.getElementById('bmiChart');
            
            // Determine which category the user falls into
            let userCategoryIndex = 0;
            if (bmiValue < 18.5) userCategoryIndex = 0;
            else if (bmiValue < 24.9) userCategoryIndex = 1;
            else if (bmiValue < 29.9) userCategoryIndex = 2;
            else if (bmiValue < 34.9) userCategoryIndex = 3;
            else if (bmiValue < 39.9) userCategoryIndex = 4;
            else userCategoryIndex = 5;
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Underweight\n(Below 18.5)', 'Healthy Weight\n(18.5 – 24.9)', 'Overweight\n(25.0 – 29.9)', 'Obesity Class 1\n(30.0 – 34.9)', 'Obesity Class 2\n(35.0 – 39.9)', 'Severe Obesity\n(40.0+)'],
                    datasets: [{
                        label: 'BMI Range Max',
                        data: [18.5, 24.9, 29.9, 34.9, 39.9, 50],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(255, 159, 64, 0.6)',
                            'rgba(255, 99, 132, 0.6)',
                            'rgba(153, 102, 255, 0.6)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 159, 64, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }, {
                        label: 'Your BMI: ' + bmiValue.toFixed(2),
                        data: Array(6).fill(null).map((_, i) => i === userCategoryIndex ? bmiValue : null),
                        type: 'line',
                        borderColor: 'rgba(255, 0, 0, 1)',
                        borderWidth: 3,
                        pointRadius: 10,
                        pointBackgroundColor: 'rgba(255, 0, 0, 1)',
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 50,
                            title: {
                                display: true,
                                text: 'BMI Value'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    if (context.datasetIndex === 0) {
                                        const ranges = ['Below 18.5', '18.5 – 24.9', '25.0 – 29.9', '30.0 – 34.9', '35.0 – 39.9', '40.0 or higher'];
                                        return 'Range: ' + ranges[context.dataIndex];
                                    }
                                    return 'Your BMI: ' + bmiValue.toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
        </script>
    }
}


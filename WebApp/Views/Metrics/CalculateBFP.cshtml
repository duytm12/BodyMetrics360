@model CalculateBFPRequest
@{
    ViewData["Title"] = "Calculate BFP";
}

<div class="container mt-4">
    <h2>Calculate Body Fat Percentage (BFP)</h2>
    <p class="text-muted">Enter your body measurements to calculate your Body Fat Percentage.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["BFPResult"] != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Calculation Result</h5>
            </div>
            <div class="card-body">
                <h3 class="text-warning">@Convert.ToDouble(TempData["BFPResult"]).ToString("F2")%</h3>
                <p class="text-muted">Body Fat Percentage</p>

                <hr />
                <div class="mt-4">
                    <h5>BFP Reference Chart</h5>
                    <div class="chart-container" style="position: relative; height: 350px;">
                        <canvas id="bfpChart"></canvas>
                    </div>
                </div>

                @if (TempData["BfpRecCategory"] != null)
                {
                    <hr />
                    <h5>BFP Recommendation</h5>
                    <p class="mb-1"><strong>Category:</strong> @TempData["BfpRecCategory"]</p>
                    <p class="mb-3"><strong>Recommendation:</strong> @TempData["BfpRecText"]</p>
                }

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-warning">View All Metrics</a>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="CalculateBFP" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="WaistInches" class="form-label"></label>
                        <input asp-for="WaistInches" class="form-control" />
                        <span asp-validation-for="WaistInches" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NeckInches" class="form-label"></label>
                        <input asp-for="NeckInches" class="form-control" />
                        <span asp-validation-for="NeckInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="HipInches" class="form-label"></label>
                        <input asp-for="HipInches" class="form-control" />
                        <span asp-validation-for="HipInches" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HeightInches" class="form-label"></label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                        <option value="">-- Select Gender --</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-warning">Calculate</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (TempData["BFPResult"] != null)
    {
        <script>
            const bfpValue = @Convert.ToDouble(TempData["BFPResult"]);
            const userGender = '@TempData["Gender"]';
            const ctx = document.getElementById('bfpChart');
            
            // BFP ranges: [Essential Fat Max, Athletes Max, Fitness Max, Average Max, Obese Min]
            const menRanges = [5, 13, 17, 24, 35];
            const womenRanges = [13, 20, 24, 31, 40];
            
            // Determine user's category
            let userCategoryIndex = 0;
            if (userGender === 'Male') {
                if (bfpValue <= 5) userCategoryIndex = 0;
                else if (bfpValue <= 13) userCategoryIndex = 1;
                else if (bfpValue <= 17) userCategoryIndex = 2;
                else if (bfpValue <= 24) userCategoryIndex = 3;
                else userCategoryIndex = 4;
            } else {
                if (bfpValue <= 13) userCategoryIndex = 0;
                else if (bfpValue <= 20) userCategoryIndex = 1;
                else if (bfpValue <= 24) userCategoryIndex = 2;
                else if (bfpValue <= 31) userCategoryIndex = 3;
                else userCategoryIndex = 4;
            }
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Essential Fat', 'Athletes', 'Fitness', 'Acceptable / Average', 'Obese'],
                    datasets: [{
                        label: 'Men (%)',
                        data: menRanges,
                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Women (%)',
                        data: womenRanges,
                        backgroundColor: 'rgba(255, 99, 132, 0.6)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Your BFP: ' + bfpValue.toFixed(2) + '%',
                        data: Array(5).fill(null).map((_, i) => i === userCategoryIndex ? bfpValue : null),
                        type: 'line',
                        borderColor: 'rgba(255, 0, 0, 1)',
                        borderWidth: 3,
                        pointRadius: 10,
                        pointBackgroundColor: 'rgba(255, 0, 0, 1)',
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 45,
                            title: {
                                display: true,
                                text: 'Body Fat Percentage (%)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    if (context.datasetIndex === 0) {
                                        const ranges = ['2-5%', '6-13%', '14-17%', '18-24%', '25%+'];
                                        return 'Men: ' + ranges[context.dataIndex];
                                    } else if (context.datasetIndex === 1) {
                                        const ranges = ['10-13%', '14-20%', '21-24%', '25-31%', '32%+'];
                                        return 'Women: ' + ranges[context.dataIndex];
                                    }
                                    return 'Your BFP: ' + bfpValue.toFixed(2) + '%';
                                }
                            }
                        }
                    }
                }
            });
        </script>
    }
}


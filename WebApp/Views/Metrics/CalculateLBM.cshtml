@model CalculateLBMRequest
@{
    ViewData["Title"] = "Calculate LBM";
}

<div class="container mt-4">
    <h2>Calculate Lean Body Mass (LBM)</h2>
    <p class="text-muted">Enter your measurements to calculate your Lean Body Mass.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["LBMResult"] != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Calculation Result</h5>
            </div>
            <div class="card-body">
                <h3 class="text-danger">@Convert.ToDouble(TempData["LBMResult"]).ToString("F2") lbs</h3>
                <p class="text-muted">Lean Body Mass</p>

                <hr />
                <div class="mt-4">
                    <h5>LBM Reference Chart</h5>
                    <div class="chart-container" style="position: relative; height: 350px;">
                        <canvas id="lbmChart"></canvas>
                    </div>
                </div>

                @if (TempData["LbmRecCategory"] != null)
                {
                    <hr />
                    <h5>LBM Recommendation</h5>
                    <p class="mb-1"><strong>Category:</strong> @TempData["LbmRecCategory"]</p>
                    <p class="mb-3"><strong>Recommendation:</strong> @TempData["LbmRecText"]</p>
                }

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-danger">View All Metrics</a>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="CalculateLBM" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="WeightLbs" class="form-label"></label>
                        <input asp-for="WeightLbs" class="form-control" />
                        <span asp-validation-for="WeightLbs" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HeightInches" class="form-label"></label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="WaistInches" class="form-label"></label>
                        <input asp-for="WaistInches" class="form-control" />
                        <span asp-validation-for="WaistInches" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HipInches" class="form-label"></label>
                        <input asp-for="HipInches" class="form-control" />
                        <span asp-validation-for="HipInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NeckInches" class="form-label"></label>
                        <input asp-for="NeckInches" class="form-control" />
                        <span asp-validation-for="NeckInches" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                            <option value="">-- Select Gender --</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger">Calculate</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (TempData["LBMResult"] != null)
    {
        <script>
            const lbmValue = @Convert.ToDouble(TempData["LBMResult"]);
            const lbmPercentage = @Convert.ToDouble(TempData["LBMPercentage"]);
            const userGender = '@TempData["Gender"]';
            const ctx = document.getElementById('lbmChart');
            
            // LBM percentage ranges: [Below Average Max, Average Max, Fitness Max, Athletes Max]
            const menRanges = [69, 76, 81, 91];
            const womenRanges = [61, 68, 73, 85];
            
            // Determine user's category based on percentage
            let userCategoryIndex = 0;
            if (userGender === 'Male') {
                if (lbmPercentage < 69) userCategoryIndex = 0;
                else if (lbmPercentage < 76) userCategoryIndex = 1;
                else if (lbmPercentage < 81) userCategoryIndex = 2;
                else userCategoryIndex = 3;
            } else {
                if (lbmPercentage < 61) userCategoryIndex = 0;
                else if (lbmPercentage < 68) userCategoryIndex = 1;
                else if (lbmPercentage < 73) userCategoryIndex = 2;
                else userCategoryIndex = 3;
            }
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Below Average', 'Acceptable / Average', 'Fitness Enthusiasts', 'Athletes'],
                    datasets: [{
                        label: 'Men (%)',
                        data: menRanges,
                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Women (%)',
                        data: womenRanges,
                        backgroundColor: 'rgba(255, 99, 132, 0.6)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }, {
                        label: 'Your LBM: ' + lbmPercentage.toFixed(1) + '% (' + lbmValue.toFixed(2) + ' lbs)',
                        data: Array(4).fill(null).map((_, i) => i === userCategoryIndex ? lbmPercentage : null),
                        type: 'line',
                        borderColor: 'rgba(255, 0, 0, 1)',
                        borderWidth: 3,
                        pointRadius: 10,
                        pointBackgroundColor: 'rgba(255, 0, 0, 1)',
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Lean Body Mass (%)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    if (context.datasetIndex === 0) {
                                        const ranges = ['< 69%', '69-76%', '76-81%', '81-91%'];
                                        return 'Men: ' + ranges[context.dataIndex];
                                    } else if (context.datasetIndex === 1) {
                                        const ranges = ['< 61%', '61-68%', '68-73%', '73-85%'];
                                        return 'Women: ' + ranges[context.dataIndex];
                                    }
                                    return 'Your LBM: ' + lbmPercentage.toFixed(1) + '% (' + lbmValue.toFixed(2) + ' lbs)';
                                }
                            }
                        }
                    }
                }
            });
        </script>
    }
}


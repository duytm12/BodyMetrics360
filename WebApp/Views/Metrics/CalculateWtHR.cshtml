@model CalculateWtHRRequest
@{
    ViewData["Title"] = "Calculate WtHR";
}

<div class="container mt-4">
    <h2>Calculate Waist-to-Height Ratio (WtHR)</h2>
    <p class="text-muted">Enter your measurements to calculate your Waist-to-Height Ratio.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["WtHRResult"] != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Calculation Result</h5>
            </div>
            <div class="card-body">
                <h3 class="text-secondary">@Convert.ToDouble(TempData["WtHRResult"]).ToString("F3")</h3>
                <p class="text-muted">Waist-to-Height Ratio</p>
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">View All Metrics</a>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="CalculateWtHR" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="WaistInches" class="form-label"></label>
                        <input asp-for="WaistInches" class="form-control" />
                        <span asp-validation-for="WaistInches" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HeightInches" class="form-label"></label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                        <option value="">-- Select Gender --</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-secondary">Calculate</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@model CalculateWtHRRequest
@{
    ViewData["Title"] = "Calculate WtHR";
}

<div class="container mt-4">
    <h2>Calculate Waist-to-Height Ratio (WtHR)</h2>
    <p class="text-muted">Enter your measurements to calculate your Waist-to-Height Ratio.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["WtHRResult"] != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Calculation Result</h5>
            </div>
            <div class="card-body">
                <h3 class="text-secondary">@Convert.ToDouble(TempData["WtHRResult"]).ToString("F3")</h3>
                <p class="text-muted">Waist-to-Height Ratio</p>

                <hr />
                <div class="mt-4">
                    <h5>WtHR Reference Chart</h5>
                    <div class="chart-container" style="position: relative; height: 350px;">
                        <canvas id="wthrChart"></canvas>
                    </div>
                </div>

                @if (TempData["WtHrRecCategory"] != null)
                {
                    <hr />
                    <h5>WtHR Recommendation</h5>
                    <p class="mb-1"><strong>Category:</strong> @TempData["WtHrRecCategory"]</p>
                    <p class="mb-3"><strong>Recommendation:</strong> @TempData["WtHrRecText"]</p>
                }

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">View All Metrics</a>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="CalculateWtHR" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="WaistInches" class="form-label"></label>
                        <input asp-for="WaistInches" class="form-control" />
                        <span asp-validation-for="WaistInches" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HeightInches" class="form-label"></label>
                        <input asp-for="HeightInches" class="form-control" />
                        <span asp-validation-for="HeightInches" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                        <option value="">-- Select Gender --</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-secondary">Calculate</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (TempData["WtHRResult"] != null)
    {
        <script>
            const wthrValue = @Convert.ToDouble(TempData["WtHRResult"]);
            const ctx = document.getElementById('wthrChart');
            
            // Determine user's category
            let userCategoryIndex = 0;
            if (wthrValue < 0.40) userCategoryIndex = 0;
            else if (wthrValue <= 0.49) userCategoryIndex = 1;
            else if (wthrValue <= 0.59) userCategoryIndex = 2;
            else userCategoryIndex = 3;
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Too Slender / Underweight\n(Below 0.40)', 'Healthy Range\n(0.40 to 0.49)', 'Increased Risk\n(0.50 to 0.59)', 'Highest Risk / Central Obesity\n(0.60 or higher)'],
                    datasets: [{
                        label: 'Ratio Range Max',
                        data: [0.40, 0.49, 0.59, 0.70],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(255, 99, 132, 0.6)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }, {
                        label: 'Your WtHR: ' + wthrValue.toFixed(3),
                        data: Array(4).fill(null).map((_, i) => i === userCategoryIndex ? wthrValue : null),
                        type: 'line',
                        borderColor: 'rgba(255, 0, 0, 1)',
                        borderWidth: 3,
                        pointRadius: 10,
                        pointBackgroundColor: 'rgba(255, 0, 0, 1)',
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 0.7,
                            title: {
                                display: true,
                                text: 'Waist-to-Height Ratio'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    if (context.datasetIndex === 0) {
                                        const ranges = ['Below 0.40', '0.40 to 0.49', '0.50 to 0.59', '0.60 or higher'];
                                        const risks = ['Possible nutritional risk', 'Lowest health risk', 'Increased risk of heart disease/diabetes', 'Highest risk for metabolic disorders'];
                                        return 'Range: ' + ranges[context.dataIndex] + ' - ' + risks[context.dataIndex];
                                    }
                                    return 'Your WtHR: ' + wthrValue.toFixed(3);
                                }
                            }
                        }
                    }
                }
            });
        </script>
    }
}

